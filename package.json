{
  "name": "impacttracker",
  "author": "",
  "version": "0.0.1",
  "description": "Impact Tracker prototype",
  "dependencies": {
    "mongodb": "~2.0.37",
    "connect-mongo": "~0.8.1",
    "connect-redis": "~2.4.0",
    "express-session": "~1.11.3",
    "mongoose": "~4.0.7",
    "passport-local-mongoose": "~1.0.1",
    "passport-local": "~1.0.0",
    "body-parser": "~1.13.2",
    "react": "~0.13.3",
    "superagent": "~1.2.0",
    "flux": "~2.0.3",
    "object-assign": "~3.0.0",
    "react-router": "~0.13.3",
    "react-cookie": "~0.2.5",
    "gridfs-stream": "~1.1.1"
  },
  "devDependencies": {
    "browserify": "~10.2.6",
    "watchify": "^2.1.1",
    "envify": "~3.4.0",
    "uglify-js": "~2.4.15",
    "live-reload": "latest",
    "opener": "latest",
    "node-sass": "~2.1.1",
    "parallelshell": "~1.1.1",
    "http-server": "~0.8.0",
    "fsmonitor": "~0.2.4",
    "nodemon": "~1.3.7",
    "babelify": "~6.1.3"
  },
  "config": {
    "move:html": "cd app && find . -name '*.html' -exec cp {} --parents -t ../dist ';' && cd ..",
    "move:css": "cd app && find . -name '*.css' -exec cp {} --parents -t ../dist ';' && cd ..",
    "move:map": "cd app && find . -name '*.map' -exec cp {} --parents -t ../dist ';' && cd ..",
    "build:move": "parallelshell 'npm run move:html' 'npm run move:css' 'npm run move:map'",
    "todo": "add linters"
  },
  "scripts": {
    "build:sass": "cat client/sass/*.scss | node-sass --output-style compressed > public/css/main.css",
    "build:sass:dev": "cat client/sass/*.scss | node-sass --output-style expanded > public/css/main.css",
    "build:js": "NODE_ENV=production browserify client/app/app.js | uglifyjs -cm > public/bundle.min.js",
    "build:js:dev": "browserify client/app/app.js --verbose > public/bundle.js",
    "build": "parallelshell 'npm run build:move' 'npm run build:js' 'npm run build:sass'",
    "build:dev": "parallelshell 'npm run build:move' 'npm run build:js:dev' 'npm run build:sass:dev'",
    "open:dev": "opener http://localhost:2000/index.html",
    "livereload": "live-reload --port 9091 public/ client/",
    "serve": "http-server -p 2000 public/ -c-1",
    "runserver": "NODE_ENV=development nodejs server/app.js",
    "watch:client": "fsmonitor -s -d client/app !.* npm run build:dev",
    "watch:server": "NODE_ENV=development nodemon --watch server server/app.js",
    "dev": "parallelshell 'npm run livereload' 'npm run watch:client' 'npm run watch:server' 'npm run open:dev'",
    "dev:no-open": "parallelshell 'npm run livereload' 'npm run watch:client' 'npm run watch:server'"
  },
  "browserify": {
    "transform": [
      "envify",
      "babelify"
    ]
  }
}
